@model Subject
<script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
@{
    ViewData["Title"] = "Add A New Subject";
}

<div calss ="container">
    <div clss="row">
        <div class="col-6 offset-3">
            <br />
            <br />
            @{
                var subjectAddedMessage = TempData["SubjectAdded"] as string;
            }

            @if (!string.IsNullOrEmpty(subjectAddedMessage))
            {
                <div class="alert alert-success">
                    @subjectAddedMessage
                </div>
            }
            @if (TempData["DuplicateError"] != null)
            {
                <div class="alert alert-danger">
                    @TempData["DuplicateError"]
                </div>
            }
            <div style="border-radius:24px; background-color:#12011f" class="card-header text-white">
                 <h1 style="font-size: 5rem;" class="text-center">ADD SUBJECT</h1>
            </div>
            <br />
            <div class="card">           
                <div style="background-color:#12011f" class="p-3 mb-0 bg-success-subtle text-emphasis-success" card="card-body">
                    <form   method="post" asp-action="Add">
                        <div class="form-floating mb-3">
                            <input asp-for="SFSUBJCODE" type=" text" class="form-control border-success" id="floatingInput" >
                            <label asp-for="SFSUBJCODE"  for="floatingInput">SUBJECT CODE</label>
                            <span asp-validation-for="SFSUBJCODE" class="text-danger"></span>
                        </div> 
                       
                        <div class="form-floating mb-3">
                            <input asp-for="SFSUBJDESC" type=" text" class="form-control border-success" id="floatingInput">
                            <label asp-for="SFSUBJDESC" for="floatingInput">SUBJECT DESCRIPTION</label>
                            <span asp-validation-for="SFSUBJDESC" class="text-danger"></span>
                        </div>
                       
                        <div class="form-floating mb-3">
                            <input asp-for="SFSUBJUNITS" type=" text" class="form-control border-success" id="floatingInput">
                            <label asp-for="SFSUBJUNITS" for="floatingInput">UNITS</label>
                            <span asp-validation-for="SFSUBJUNITS" class="text-danger"></span>
                        </div>
                        <p class="fs-6 text-white" style="text-align:center">REQUISITE INFORMATION</p>
                      
                        @*<div class="center-content">
                            <div class="form-check-floating mb-3 form-check-inline">
