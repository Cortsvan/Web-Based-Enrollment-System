                                <label class="form-check-label" for="inlineRadioOption1">CO-REQUISITE</label>
                            </div>
                            <div class="form-check-floating mb-3 form-check-inline">
                                <input class="form-check-input" type="radio" id="inlineRadioOptions2" name="radBtnOptions" value="PRE" asp-for="SFSUBJREQ">
                                <label class="form-check-label" for="inlineRadioOption2">PRE-REQUISITE</label>
                            </div>
                        </div>*@
                        <div class="center-content">
                            <div class="form-check-floating text-white mb-3 form-check-inline">
                                <input class="form-check-input" type="radio" id="Pre" name="select" onclick="selected()"> 
                                <label for="pre">Pre</label>
                            </div>
                            <div class="form-check-floating text-white mb-3 form-check-inline">
                                <input class="form-check-input" type="radio" id="Co" name="select" onclick="selected()">
                                <label for="co">Co</label>
                            </div>
                        </div>
                        @*<div>
                            <label for="units" class="form-control border-success"> Subject Code:</label>

                        </div>*@
                        @*<input asp-for="SFSUBJCODEREQ" type=" text" id="selectedReq" class="form-control border-success" disabled>
                        <input asp-for="SFSUBJCODEREQ" type=" text" id="selectedReq" class="form-control border-success" disabled>*@
                        <div class="form-floating mb-3">
                            <input asp-for="SFSUBJCODEREQ" type="text" id="Coreq" class="form-control border-success" >
                            <input asp-for="SFSUBJREQ" type="hidden" id="selectedReq" class="form-control border-success" >
                            @*<input asp-for="SFSUBJCODEREQ" type=" text" id="selectedReq" class="form-control border-success" disabled>
                            <label for="requisite">REQUISITE CODE</label>
                            <span asp-validation-for="SFSUBJCODEREQ" class="text-danger"></span>*@
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="SFSUBJREGOFRNG" class="form-select" id="floatingSelect" aria-label="Floating label select example">

                                <option value="">SELECT</option>
                                <option value="1st-SEM">1st</option>
                                <option value="2nd-SEM">2nd</option>
                                <option value="SUMMER">SUMMER</option>
                             
                            </select>
                            <label for="floatingSelect">OFFERING</label>
                            <span asp-validation-for="SFSUBJREGOFRNG" class="text-danger"></span>
                        </div>
                     
                        <div class="form-floating mb-3">
                            <select asp-for="SFSUBJCATEGORY" class="form-select" id="floatingSelect" aria-label="Floating label select example">

                                <option value="">SELECT</option>
                                <option value="LAB">LAB</option>
                                <option value="LEC">LEC</option>

                            </select>
                            <label for="floatingSelect">CATEGORY</label>
                            <span asp-validation-for="SFSUBJCATEGORY" class="text-danger"></span>
                        </div>
                        <div class="form-floating mb-3">
                            <select asp-for="SFSUBJCOURSECODE" class="form-select" id="floatingSelect" aria-label="Floating label select example">

                                <option value="">SELECT</option>
                                <option value="BSIT">BSIT</option>
                                <option value="BSIS">BSIS</option>
                                <option value="BSCPE">BSCPE</option>
                                <option value="BSN">BSN</option>
                                <option value="BSCRIM">BSCRIM</option>

                            </select>
                            <label for="floatingSelect">COURSE CODE</label>
                            <span asp-validation-for="SFSUBJCOURSECODE" class="text-danger"></span>
                        </div>
                     
                      
                        <div class="form-floating mb-3">
                            <input asp-for="SFSUBJCURRICULUMCOURSECODE" type=" text" class="form-control border-success" id="floatingInput">
                            <label asp-for="SFSUBJCURRICULUMCOURSECODE" for="floatingInput">CURRICULUM CODE</label>
                            <span asp-validation-for="SFSUBJCURRICULUMCOURSECODE" class="text-danger"></span>
                        </div>
                      
                        <div style ="text-align:center">
                            <input style="background-color:#870be3" class="btn btn-lg btn-outline-dark text-white" type="submit" value="Submit" btn-sm btn-success float-right />
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
<style>
    .center-content 
    {
        display: flex;
        justify-content: center;
        align-items: center;
    }
</style>
<script>
    function selected(){
        var radio1 = document.getElementById("Co");
        var radio2 = document.getElementById("Pre");
        var txtbox = document.getElementById("selectedReq");
        var Coreq = document.getElementById("Coreq");
        if(radio1.checked){
            radio2.checked = false;
            txtbox.value = 'Co';
            Coreq.value = 'N.A';
        }
       else if(radio2.checked){
            radio1.checked = false;
            txtbox.value ='Pre';
            Coreq.value = '';
        }
    }
